---
import { Image } from "astro:assets";
import GibsonPink from "~/assets/images/boisson/gibson_pink.jpg";
import Salade from "~/assets/images/salades/salade.jpg";
import Dessert from "~/assets/images/dessert/desser3.jpg";
import PizzaCard from "~/assets/images/plat/pizza.jpg";
---


<div class="w-full mx-auto">
  {/* Titre principal */}
  <h2 class="text-3xl sm:mb-8 md:text-5xl font-medium text-gray-800 text-center z-10 relative">Notre Carte</h2>

  {/* Section avec background vert et défilement horizontal sur mobile */}
  <div class="relative mt-20 md:mt-40">
    {/* Background vert */}
    <div class="bg-[#1e3a2e] h-32 md:h-64 w-full"></div>

    {/* Défilement horizontal sur mobile, grid sur desktop */}
    <div class="absolute inset-x-0 -top-20 
      flex md:grid 
      overflow-x-auto 
      md:grid-cols-4 
      gap-4 
      px-4 
      space-x-4 md:space-x-0
      scrollbar-hide">
      {/* Antipastis */}
      <div class="flex-shrink-0 md:flex-shrink md:w-full flex flex-col items-center">
        <a href="/menu/" class="block transform transition-transform hover:scale-95">
          <Image 
            src={Salade}
            alt="Nos Antipastis" 
            class="w-40 h-40 md:w-full md:h-64 object-cover rounded-lg shadow-lg" 
            width={400} 
            height={400} 
          />
        </a>
        <h3 class="text-white text-xl md:text-2xl font-medium mt-4 md:mt-6 mb-4 md:mb-8">Nos Antipastis</h3>
      </div>

      {/* Pizzas */}
      <div class="flex-shrink-0 md:flex-shrink md:w-full flex flex-col items-center">
        <a href="/menu/" class="block transform transition-transform hover:scale-95">
          <Image 
            src={PizzaCard}
            alt="Nos Pizzas" 
            class="w-40 h-40 md:w-full md:h-64 object-cover rounded-lg shadow-lg" 
            width={400} 
            height={400} 
          />
        </a>
        <h3 class="text-white text-xl md:text-2xl font-medium mt-4 md:mt-6 mb-4 md:mb-8">Nos Pizzas</h3>
      </div>

      {/* Desserts */}
      <div class="flex-shrink-0 md:flex-shrink md:w-full flex flex-col items-center">
        <a href="/menu/" class="block transform transition-transform hover:scale-95">
          <Image 
            src={Dessert}
            alt="Nos Desserts" 
            class="w-40 h-40 md:w-full md:h-64 object-cover rounded-lg shadow-lg" 
            width={400} 
            height={400} 
          />
        </a>
        <h3 class="text-white text-xl md:text-2xl font-medium mt-4 md:mt-6 mb-4 md:mb-8">Nos Desserts</h3>
      </div>

      {/* Boissons */}
      <div class="flex-shrink-0 md:flex-shrink md:w-full flex flex-col items-center">
        <a href="/menu/" class="block transform transition-transform hover:scale-95">
          <Image 
            src={GibsonPink}
            alt="Nos Boissons" 
            class="w-40 h-40 md:w-full md:h-64 object-cover rounded-lg shadow-lg" 
            width={400} 
            height={400}
          />
        </a>
        <h3 class="text-white text-xl md:text-2xl font-medium mt-4 md:mt-6 mb-4 md:mb-8">Nos Boissons</h3>
      </div>
    </div>
  </div>
</div>


  
  <script>
    // Script optionnel pour animations ou interactions
    document.addEventListener('DOMContentLoaded', () => {
      const categoryLinks = document.querySelectorAll('a[href^="/menu/"]');
      
      categoryLinks.forEach(link => {
        link.addEventListener('mouseenter', () => {
          // Animation optionnelle au survol
        });
      });
    });
  </script>