---
import { Picture, Image } from "astro:assets";
import GibsonPink from "~/assets/images/boisson/gibson_pink.jpg";
import Salade from "~/assets/images/salades/salade.jpg";
import Dessert from "~/assets/images/dessert/desser3.jpg";
import PizzaCard from "~/assets/images/plat/pizza.jpg";
---


<div class="w-full mx-auto">
    <!-- Titre principal -->
    <h2 class="text-5xl font-medium text-gray-800 text-center mb-8">Notre Carte</h2>
    
    <!-- Section avec background vert et images -->
    <div class="relative mt-40">
      <!-- Background vert -->
      <div class="bg-[#1e3a2e] h-64 w-full "></div>
      
      <!-- Grid des catÃ©gories -->
      <div class="absolute inset-x-0 -top-24 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 px-4 w-full">
        <!-- Antipastis -->
        <div class="flex flex-col items-center">
          <a href="/menu/" class="block relative transform transition-transform hover:scale-95">
            <Image 
              src={Salade}
              alt="Nos Antipastis" 
              class="w-full h-64 object-cover rounded-lg shadow-lg" 
              width={400} 
              height={400} 
            />
          </a>
          <h3 class="text-white text-2xl font-medium mt-6 mb-8">Nos Antipastis</h3>
        </div>
        
        <!-- Pizzas -->
        <div class="flex flex-col items-center">
          <a href="/menu/" class="block relative transform transition-transform hover:scale-95">
            <Image 
              src={PizzaCard}
              alt="Nos Pizzas" 
              class="w-full h-64 object-cover rounded-lg shadow-lg" 
              width={400} 
              height={400} 
            />
          </a>
          <h3 class="text-white text-2xl font-medium mt-6 mb-8">Nos Pizzas</h3>
        </div>
        
        <!-- Desserts -->
        <div class="flex flex-col items-center">
          <a href="/menu/" class="block relative transform transition-transform hover:scale-95">
            <Image 
              src={Dessert}
              alt="Nos Desserts" 
              class="w-full h-64 object-cover rounded-lg shadow-lg" 
              width={400} 
              height={400} 
            />
          </a>
          <h3 class="text-white text-2xl font-medium mt-6 mb-8">Nos Desserts</h3>
        </div>
        
        <!-- Boissons -->
        <div class="flex flex-col items-center">
          <a href="/menu/" class="block relative transform transition-transform hover:scale-95">
            <Image 
              src={GibsonPink}
              alt="Nos Boissons" 
              class="w-full h-64 object-cover rounded-lg shadow-lg" 
              width={400} 
              height={400} 
            />
          </a>
          <h3 class="text-white text-2xl font-medium mt-6 mb-8">Nos Boissons</h3>
        </div>
      </div>
    </div>
  </div>
  

  
  <script>
    // Script optionnel pour animations ou interactions
    document.addEventListener('DOMContentLoaded', () => {
      const categoryLinks = document.querySelectorAll('a[href^="/menu/"]');
      
      categoryLinks.forEach(link => {
        link.addEventListener('mouseenter', () => {
          // Animation optionnelle au survol
        });
      });
    });
  </script>