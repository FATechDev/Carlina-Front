---
const { 
  image, 
  alt, 
  class: className = "", 
  title = null, 
  text = null 
} = Astro.props;
---

<div 
  id="parallax-container"
  class:list={[className, "w-full h-[500px] bg-fixed bg-cover bg-center relative overflow-hidden"]}
  style={`background-image: url('${image.src}');`}
  role="img"
  aria-label={alt}
>
  {(title || text) && (
    <div 
      id="parallax-text"
      class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center text-white p-6 rounded-lg max-w-[80%] transition-all duration-300 ease-out"
    >
      {title && <h2 class="text-2xl font-serif mb-2 opacity-100 transition-all duration-300 md:text-4xl">{title.toUpperCase()}</h2>}
      {text && <p class="text-base opacity-100 transition-all duration-300">{text}</p>}
    </div>
  )}
</div>
